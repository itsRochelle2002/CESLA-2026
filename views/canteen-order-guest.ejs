      <span class="vob-badge" id="vobBadge">0</span>
    </button>

    <!-- Active Orders Side Panel -->
    <div
      class="panel-backdrop"
      id="panelBackdrop"
      onclick="closeActiveOrders()"
    ></div>
    <div class="active-orders-panel" id="activeOrdersPanel">
      <div class="aop-header">
        <span class="aop-title">üçΩÔ∏è Active Orders</span>
        <button class="aop-close" onclick="closeActiveOrders()">‚úï</button>
      </div>
      <div class="aop-body" id="aopBody">
        <div class="aop-empty">No active orders</div>
      </div>
