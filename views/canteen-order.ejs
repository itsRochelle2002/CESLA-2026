      // ‚îÄ‚îÄ SIDEBAR TABS ‚îÄ‚îÄ
      function switchSideTab(tab) {
        ["cats", "myorder", "history"].forEach((t) => {
          document
            .getElementById("tab" + t.charAt(0).toUpperCase() + t.slice(1))
            ?.classList.remove("active");
          document
            .getElementById("panel" + t.charAt(0).toUpperCase() + t.slice(1))
            ?.classList.remove("active");
        });
        // Map tab names to IDs
        const tabMap = {
          cats: ["tabCats", "panelCats"],
          myorder: ["tabMyOrder", "panelMyOrder"],
          history: ["tabHistory", "panelHistory"],
        };
        const [tabId, panelId] = tabMap[tab];
        document.getElementById(tabId)?.classList.add("active");
        document.getElementById(panelId)?.classList.add("active");
        if (tab === "myorder") loadMyOrders(false);
        if (tab === "history") loadMyOrders(true);
      }

      // ‚îÄ‚îÄ LOAD MY ORDERS ‚îÄ‚îÄ
      async function loadMyOrders(showAll) {
        try {
          const res = await fetch("/canteen/api/my-orders");
          const data = await res.json();
          if (!data.success) return;
          const orders = data.orders;
          if (showAll) {
            renderHistory(orders);
          } else {
            const active = orders.filter(
              (o) => o.status === "preparing" || o.status === "ready",
            );
            renderActiveOrders(active);
          }
        } catch (e) {}
      }

      function renderActiveOrders(orders) {
        const el = document.getElementById("myOrderList");
        if (!orders.length) {
          el.innerHTML = '<div class="moc-empty">No active orders</div>';
          return;
        }
        el.innerHTML = orders
          .map((o) => {
            const statusLabel =
              o.status === "preparing"
                ? "‚è≥ Waiting..."
                : "‚úÖ Ready for Pick-up!";
            const statusClass = o.status === "preparing" ? "waiting" : "ready";
            return `<div class="my-order-card" onclick="viewOrderDetail('${o.order_no}')">
            <div class="moc-no">${o.order_no}</div>
            <div class="moc-status ${statusClass}">${statusLabel}</div>
            <div class="moc-total">‚Ç±${parseFloat(o.total).toFixed(2)}</div>
            <div class="moc-time">${formatTime(o.placed_at)}</div>
          </div>`;
          })
          .join("");
      }

      function renderHistory(orders) {
        const el = document.getElementById("histList");
        if (!orders.length) {
          el.innerHTML = '<div class="moc-empty">No orders yet</div>';
          return;
        }
        el.innerHTML = orders
          .map((o) => {
            const statusBadge =
              o.status === "done"
                ? "‚úî Done"
                : o.status === "ready"
                  ? "‚úÖ Ready"
                  : "‚è≥ Waiting";
            return `<div class="hist-card" onclick="viewOrderDetail('${o.order_no}')">
            <div class="hist-no">${o.order_no}</div>
            <div class="hist-row">
              <span class="hist-total">‚Ç±${parseFloat(o.total).toFixed(2)}</span>
              <span class="hist-pay">${o.pay_mode}</span>
            </div>
            <div class="hist-row">
              <span class="hist-date">${formatTime(o.placed_at)}</span>
              <span style="font-size:0.62rem;color:rgba(255,255,255,0.4)">${statusBadge}</span>
            </div>
          </div>`;
          })
          .join("");
      }

      async function viewOrderDetail(orderNo) {
        const modal = document.getElementById("orderDetailModal");
        const content = document.getElementById("odmContent");
        content.innerHTML = "Loading...";
        modal.classList.add("show");
        try {
          const res = await fetch(`/canteen/api/my-orders/${orderNo}/items`);
          const data = await res.json();
          if (!data.success) {
            content.innerHTML = "Failed to load.";
            return;
          }
          const o = data.order;
          const statusLabel =
            o.status === "preparing"
              ? "‚è≥ Waiting..."
              : o.status === "ready"
                ? "‚úÖ Ready for Pick-up!"
                : "‚úî Done";
          content.innerHTML = `
            <div class="odm-row"><span class="odm-label">Order No.</span><span>${o.order_no}</span></div>
            <div class="odm-row"><span class="odm-label">Status</span><span>${statusLabel}</span></div>
            <div class="odm-row"><span class="odm-label">Payment</span><span>${o.pay_mode}${o.gcash_ref ? " ‚Äî " + o.gcash_ref : ""}</span></div>
            <div class="odm-row"><span class="odm-label">Placed At</span><span>${formatTime(o.placed_at)}</span></div>
            ${o.ready_at ? `<div class="odm-row"><span class="odm-label">Ready At</span><span>${formatTime(o.ready_at)}</span></div>` : ""}
            <div class="odm-items-title">Items Ordered</div>
            ${data.items.map((i) => `<div class="odm-item-row"><span>${i.item_name} x${i.qty}</span><span>‚Ç±${parseFloat(i.subtotal).toFixed(2)}</span></div>`).join("")}
            <div class="odm-total-row"><span>Total</span><span>‚Ç±${parseFloat(o.total).toFixed(2)}</span></div>
          `;
        } catch (e) {
          content.innerHTML = "Error loading details.";
        }
      }

      function closeOrderDetail() {
        document.getElementById("orderDetailModal").classList.remove("show");
      }

      function formatTime(dt) {
        if (!dt) return "";
        const d = new Date(dt);
        return (
          d.toLocaleDateString("en-PH", { month: "short", day: "numeric" }) +
          " " +
          d.toLocaleTimeString("en-PH", { hour: "2-digit", minute: "2-digit" })
        );
      }

      // Also refresh active orders tab when status overlay shows ready
      function notifyOrderReady() {
        if (
          document.getElementById("panelMyOrder")?.classList.contains("active")
        )
          loadMyOrders(false);
      }

      // ‚îÄ‚îÄ RENDER ITEMS ‚îÄ‚îÄ
      function renderItems() {
        const search = document
          .getElementById("searchInput")
          .value.toLowerCase();
        const grid = document.getElementById("itemsGrid");
        const filtered = menuItems.filter(
          (i) =>
            (currentCat === "all" || i.category === currentCat) &&
            i.name.toLowerCase().includes(search),
        );
        if (!filtered.length) {
          grid.innerHTML = '<div class="no-items">No items found.</div>';
          return;
        }
        grid.innerHTML = filtered
          .map(
            (item) => `
        <div class="item-card">
          <div class="item-img">${item.emoji}</div>
          <div class="item-name">${item.name}</div>
          <div class="item-stock">Stock: ${item.stock}</div>
          <div class="item-price">&#8369;${item.price.toFixed(2)}</div>
          <button class="btn-add-cart" onclick="addToCart(${item.id})" ${item.stock <= 0 ? "disabled" : ""}>Add To Cart</button>
        </div>`,
          )
          .join("");
      }

      function filterCat(cat, btn) {
        currentCat = cat;
        document
          .querySelectorAll(".cat-btn")
          .forEach((b) => b.classList.remove("active"));
        btn.classList.add("active");
        document.getElementById("catTitle").textContent =
          cat === "all" ? "ALL ITEMS" : cat.toUpperCase();
        renderItems();
      }

      // ‚îÄ‚îÄ CART ‚îÄ‚îÄ
      function addToCart(id) {
        const item = menuItems.find((i) => i.id === id);
        if (!item) return;
        if (cart[id]) {
          if (cart[id].qty >= item.stock) {
            showToast("‚ö†Ô∏è Max stock reached!");
            return;
          }
          cart[id].qty++;
        } else cart[id] = { ...item, qty: 1 };
        showToast(`‚úì ${item.name} added`);
        renderCart();
      }
      function removeFromCart(id) {
        delete cart[id];
        renderCart();
      }
      function changeQty(id, delta) {
        if (!cart[id]) return;
        cart[id].qty += delta;
        if (cart[id].qty <= 0) delete cart[id];
        renderCart();
      }
      function clearCart() {
        cart = {};
        const paidInput = document.getElementById("amountPaid");
        paidInput.value = "0.00";
        delete paidInput.dataset.manuallySet;
        const gcashRef = document.getElementById("gcashRef");
        if (gcashRef) gcashRef.value = "";
        renderCart();
        showToast("üóëÔ∏è Cart cleared");
      }

      function renderCart() {
        const keys = Object.keys(cart);
        orderTotal = keys.reduce(
          (s, id) => s + cart[id].price * cart[id].qty,
          0,
        );
        document.getElementById("cartTotal").textContent =
          "‚Ç±" + orderTotal.toFixed(2);
        // Auto-fill amount paid with exact total if not yet manually set
        const paidInput = document.getElementById("amountPaid");
        if (!paidInput.dataset.manuallySet) {
          paidInput.value = orderTotal.toFixed(2);
        }
        calcChange();
        const cartItemsEl = document.getElementById("cartItems");
        const cartEmptyEl = document.getElementById("cartEmpty");
        if (!keys.length) {
          cartEmptyEl.style.display = "block";
          cartItemsEl.style.display = "none";
          cartItemsEl.innerHTML = "";
          return;
        }
        cartEmptyEl.style.display = "none";
        cartItemsEl.style.display = "flex";
        cartItemsEl.innerHTML = keys
          .map((id) => {
            const it = cart[id];
            return `
        <div class="cart-item">
          <div class="cart-item-name">${it.name}</div>
          <div class="cart-item-qty">
            <button class="qty-btn" onclick="changeQty(${id},-1)">‚àí</button>
            <span class="qty-num">${it.qty}</span>
            <button class="qty-btn" onclick="changeQty(${id},1)">+</button>
          </div>
          <span class="cart-item-price">‚Ç±${(it.price * it.qty).toFixed(2)}</span>
          <button class="cart-item-del" onclick="removeFromCart(${id})">‚úï</button>
        </div>`;
          })
          .join("");
      }

      function switchPayMode() {
        const mode = document.querySelector(
          'input[name="payMode"]:checked',
        )?.value;
        const cashGroup = document.getElementById("cashGroup");
        const gcashGroup = document.getElementById("gcashGroup");
        const changeRow = document.querySelector(".change-row");
        const warnEl = document.getElementById("insufficientWarn");

        if (mode === "cash") {
          cashGroup.style.display = "";
          gcashGroup.style.display = "none";
          changeRow.style.display = "";
          warnEl.classList.remove("show");
          calcChange();
        } else if (mode === "gcash") {
          cashGroup.style.display = "none";
          gcashGroup.style.display = "";
          changeRow.style.display = "none";
          warnEl.classList.remove("show");
        } else {
          // credit
          cashGroup.style.display = "none";
          gcashGroup.style.display = "none";
          changeRow.style.display = "none";
          warnEl.classList.remove("show");
        }
      }

      function calcChange() {
        const paid =
          parseFloat(document.getElementById("amountPaid").value) || 0;
        const change = paid - orderTotal;
        const val = document.getElementById("changeVal");
        const warn = document.getElementById("insufficientWarn");
        const mode = document.querySelector(
          'input[name="payMode"]:checked',
        )?.value;

        if (
          !mode ||
          mode === "credit" ||
          mode === "gcash" ||
          orderTotal === 0
        ) {
          val.textContent = "‚Ç± 0.00";
          val.className = "change-val";
          warn.classList.remove("show");
          return;
        }

        if (change < 0) {
          val.textContent = "- ‚Ç±" + Math.abs(change).toFixed(2);
          val.className = "change-val insufficient";
          warn.classList.add("show");
        } else if (change > 0) {
          val.textContent = "‚Ç±" + change.toFixed(2);
          val.className = "change-val has-change";
          warn.classList.remove("show");
        } else {
          val.textContent = "‚Ç± 0.00";
          val.className = "change-val";
          warn.classList.remove("show");
        }
      }

      // ‚îÄ‚îÄ PLACE ORDER ‚îÄ‚îÄ
      async function placeOrder() {
        if (!Object.keys(cart).length) {
          showToast("‚ö†Ô∏è Cart is empty!");
          return;
        }
        const modeEl = document.querySelector('input[name="payMode"]:checked');
        if (!modeEl) {
          showToast("‚ö†Ô∏è Please select a payment method!");
          return;
        }
        const mode = modeEl.value;
        const paid =
          parseFloat(document.getElementById("amountPaid").value) || 0;
        const gcashRef =
          document.getElementById("gcashRef")?.value?.trim() || "";

        if (mode === "cash" && orderTotal > 0 && paid < orderTotal) {
          showToast("‚ö†Ô∏è Enter the amount paid first!");
          document.getElementById("amountPaid").focus();
          return;
        }
        if (mode === "gcash" && !gcashRef) {
          showToast("‚ö†Ô∏è Enter GCash reference number!");
          document.getElementById("gcashRef").focus();
          return;
        }

        document.getElementById("btnPlace").disabled = true;

        const payload = {
          items: Object.values(cart).map((i) => ({
            id: i.id,
            name: i.name,
            price: i.price,
            qty: i.qty,
          })),
          total: orderTotal,
          payMode: mode,
          amountPaid: mode === "cash" ? paid : orderTotal,
          change: mode === "cash" ? Math.max(paid - orderTotal, 0) : 0,
          gcashRef: mode === "gcash" ? gcashRef : null,
          customerType: "member",
        };

        try {
          const res = await fetch("/canteen/api/order", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(payload),
          });
          const data = await res.json();
          if (!data.success) {
            showToast("‚ùå " + (data.message || "Order failed."));
            document.getElementById("btnPlace").disabled = false;
            return;
          }

          currentOrderId = data.orderId;
          clearCart();
          showOrderStatus("preparing");
          startPolling();
        } catch (e) {
          showToast("‚ùå Server error. Try again.");
          document.getElementById("btnPlace").disabled = false;
        }
      }

      // ‚îÄ‚îÄ STATUS OVERLAY ‚îÄ‚îÄ
      // ‚îÄ‚îÄ NOTIFICATION SOUND (Web Audio API) ‚îÄ‚îÄ
      function playReadySound() {
        try {
          const ctx = new (window.AudioContext || window.webkitAudioContext)();
          // Chime: 3 ascending notes
          const notes = [523.25, 659.25, 783.99]; // C5, E5, G5
          notes.forEach((freq, i) => {
            const osc = ctx.createOscillator();
            const gain = ctx.createGain();
            osc.connect(gain);
            gain.connect(ctx.destination);
            osc.type = "sine";
            osc.frequency.value = freq;
            const t = ctx.currentTime + i * 0.18;
            gain.gain.setValueAtTime(0, t);
            gain.gain.linearRampToValueAtTime(0.4, t + 0.05);
            gain.gain.exponentialRampToValueAtTime(0.001, t + 0.5);
            osc.start(t);
            osc.stop(t + 0.5);
          });
        } catch (e) {
          /* ignore if audio blocked */
        }
      }

      let isMinimized = false;

      function showOrderStatus(status) {
        const overlay = document.getElementById("statusOverlay");
        const iconWrap = document.getElementById("statusIconWrap");
        const pulseRing = document.getElementById("pulseRing");
        const emoji = document.getElementById("statusEmoji");
        const title = document.getElementById("statusTitle");
        const subtitle = document.getElementById("statusSubtitle");
        const badge = document.getElementById("orderIdBadge");
        const dot2 = document.getElementById("dot2");
        const dot3 = document.getElementById("dot3");
        const lbl2 = document.getElementById("lbl2");
        const lbl3 = document.getElementById("lbl3");
        const line2 = document.getElementById("line2");
        const btnDone = document.getElementById("btnDone");
        const confetti = document.getElementById("confetti");
        const closeBtn = document.getElementById("statusCloseBtn");

        badge.textContent = "ORDER #" + (currentOrderId || "‚Äî");

        if (status === "preparing") {
          isMinimized = false;
          overlay.classList.add("active");
          iconWrap.className = "status-icon-wrap preparing";
          pulseRing.style.display = "block";
          emoji.textContent = "‚è≥";
          title.textContent = "Preparing Your Order";
          subtitle.innerHTML =
            "Please wait while the canteen prepares your food.<br/>We'll notify you when it's ready!";
          dot2.className = "step-dot active";
          dot2.textContent = "üç≥";
          dot3.className = "step-dot pending";
          dot3.textContent = "üîî";
          lbl2.className = "step-label active";
          lbl2.textContent = "Preparing";
          lbl3.className = "step-label pending";
          lbl3.textContent = "Ready";
          line2.className = "step-line";
          btnDone.style.display = "none";
          closeBtn.classList.remove("hidden");
          confetti.innerHTML = "";
        } else if (status === "ready") {
          // Play sound + show notification
          playReadySound();

          // If minimized, show notification banner instead of reopening
          if (isMinimized) {
            showReadyNotif();
          } else {
            overlay.classList.add("active");
          }

          iconWrap.className = "status-icon-wrap ready";
          pulseRing.style.display = "none";
          emoji.textContent = "üéâ";
          emoji.classList.add("ready-bounce");
          title.textContent = "Ready for Pickup!";
          subtitle.innerHTML =
            "üîî Your order is ready!<br/>Please proceed to the canteen counter to claim your order.";
          dot2.className = "step-dot done";
          dot2.textContent = "‚úì";
          dot3.className = "step-dot done";
          dot3.textContent = "‚úì";
          lbl2.className = "step-label done";
          lbl2.textContent = "Prepared";
          lbl3.className = "step-label done";
          lbl3.textContent = "Ready!";
          line2.className = "step-line done";
          btnDone.style.display = "block";
          closeBtn.classList.add("hidden");
          spawnConfetti();

          // Also refresh the order tab
          loadMyOrders(false);
        }
      }

      function showReadyNotif() {
        const notif = document.getElementById("readyNotif");
        document.getElementById("readyNotifOrderId").textContent =
          currentOrderId ? `#${currentOrderId}` : "Your order";
        notif.classList.add("show");
        // Auto-hide after 8 seconds if not clicked
        setTimeout(() => {
          if (
            !document
              .getElementById("statusOverlay")
              .classList.contains("active")
          ) {
            notif.classList.remove("show");
          }
        }, 8000);
      }

      function minimizeOrder() {
        // Close the overlay but keep polling
        document.getElementById("statusOverlay").classList.remove("active");
        isMinimized = true;
        // Switch sidebar to Order tab so they can see it
        switchSideTab("myorder");
        showToast(
          "‚è≥ Order still being prepared ‚Äî we'll notify you when ready!",
        );
      }

      function reopenOrderStatus() {
        // Called when clicking the ready notification banner
        document.getElementById("readyNotif").classList.remove("show");
        isMinimized = false;
        document.getElementById("statusOverlay").classList.add("active");
      }

      function spawnConfetti() {
        const colors = [
          "#c9a84c",
          "#e8c87a",
          "#27ae60",
          "#3498db",
          "#e74c3c",
          "#9b59b6",
        ];
        const el = document.getElementById("confetti");
        el.innerHTML = "";
        for (let i = 0; i < 24; i++) {
          const dot = document.createElement("div");
          dot.className = "confetti-dot";
          dot.style.cssText = `left:${Math.random() * 100}%;background:${colors[i % colors.length]};animation-delay:${Math.random() * 1.2}s;animation-duration:${1.8 + Math.random() * 1.2}s;`;
          el.appendChild(dot);
        }
      }

      function startPolling() {
        if (pollInterval) clearInterval(pollInterval);
        pollInterval = setInterval(async () => {
          if (!currentOrderId) return;
          try {
            const res = await fetch(
              `/canteen/api/order/${currentOrderId}/status`,
            );
            const data = await res.json();
            if (data.found && data.status === "ready") {
              clearInterval(pollInterval);
              pollInterval = null;
              showOrderStatus("ready");
            }
          } catch (e) {
            /* ignore */
          }
        }, 2500);
      }

      function dismissOrder() {
        document.getElementById("statusOverlay").classList.remove("active");
        document.getElementById("readyNotif").classList.remove("show");
        document.getElementById("btnPlace").disabled = false;
        isMinimized = false;
        currentOrderId = null;
        if (pollInterval) {
          clearInterval(pollInterval);
          pollInterval = null;
        }
        // Refresh order history
        loadMyOrders(true);
      }

      function printReceipt() {
        showToast("üñ®Ô∏è Printing receipt...");
      }

      let toastTimer;
      function showToast(msg) {
        const t = document.getElementById("toast");
        t.textContent = msg;
        t.classList.add("show");
        clearTimeout(toastTimer);
        toastTimer = setTimeout(() => t.classList.remove("show"), 2200);
      }

      renderItems();
    </script>
